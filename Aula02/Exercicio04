#include <stdio.h>
#include <stdlib.h>
#include <math.h>
    int main()
    {
    int a, b, c, maior;
    printf("Valor a:");
    scanf("%d", &a);
    printf("Valor b:");
    scanf("%d", &b);
    printf("Valor c:");
    scanf("%d", &c);

    maior = (a + b + abs(a - b)) / 2;
    if (maior < c){
        maior = c;
    }

    printf("Maior valor: %d", maior);
    return 0;
    }
