    #include <stdio.h>
    #include <stdlib.h>
    #include <math.h>



    int main()
    {
    int idade, dias, mes, anos, resto;
    printf("Idade em dias: ");
    scanf("%d", &idade);
    dias = idade;

    anos = dias / 365;
    resto = dias % 365;

    mes = resto / 30;
    resto = resto % 30;



    printf("Voce tem %d Ano(s), %d Mes(es) e %d Dia(s) de Idade", anos, mes, resto);
    return 0;
    }
